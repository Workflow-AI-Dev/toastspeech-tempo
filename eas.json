{
  "cli": {
    "version": ">= 16.17.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk" 
      },
      "ios": {
        "buildType": "simulator" 
      }
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "apk",
        "autoIncrement": true 
      },
      "ios": {
        "buildType": "archive",
        "autoIncrement": true
      }
    }
  },
  "submit": {
    "production": {}
  }
}
